    <!-- WALKME OVERLAY ELEMENTS -->
    <div class="walkme-overlay-backdrop" id="backdrop"></div>
    
    <div class="walkme-bubble" id="bubble">
        <h4 id="bubbleTitle">WalkMe Tip</h4>
        <p id="bubbleText">Instruction goes here.</p>
        <div class="walkme-steps" id="bubbleStep">Step 1 of 5</div>
        <button class="walkme-next-btn" id="bubbleBtn" onclick="nextStep()">Next</button>
    </div>

    <!-- SUCCESS MODAL -->
    <div class="success-modal" id="successModal">
        <h2>üéâ Process Complete!</h2>
        <p>You successfully navigated the CRM while applying the Empathy Model.</p>
        <p><strong>Key Takeaway:</strong> You prioritized the Repair (Speed) and added Credit (Delight).</p>
        <button class="btn btn-primary" onclick="location.reload()">Restart Simulation</button>
    </div>

<script>
    // --- SIMULATION STATE ---
    let currentTourStep = 0;
    
    // --- TOUR STEPS CONFIGURATION ---
    // Target: ID of element to highlight. 
    // Trigger: 'next' (button click) or 'click' (user must click the highlighted element)
    const tourSteps = [
        {
            target: 'customerCard',
            title: "Verify Customer",
            text: "Before starting, always verify the customer's loyalty tier. Jane is a <b>Gold Member</b>, so we should prioritize her resolution.",
            trigger: 'next',
            position: 'right'
        },
        {
            target: 'btnLogCase',
            title: "Log the Issue",
            text: "The customer mentioned the sofa is torn. Click <b>Report Issue</b> to start a ticket.",
            trigger: 'click', // Wait for user to actually click the button
            position: 'right'
        },
        {
            target: 'caseReason',
            title: "Categorize the Defect",
            text: "Select <b>Item Damaged / Defective</b> from the dropdown menu.",
            trigger: 'change', // Custom trigger handled in code
            position: 'right'
        },
        {
            target: 'empathySection',
            title: "The Empathy Pause",
            text: "Wait! Before fixing the problem, you must fix the mood. Check the box to confirm you've used an Empathy Statement.",
            trigger: 'click-check',
            position: 'left'
        },
        {
            target: 'resolutionType',
            title: "Choose the Solution",
            text: "Jane needs the sofa for guests this weekend. Select <b>Schedule Repair Tech</b> as it is the fastest option.",
            trigger: 'change-res',
            position: 'left'
        },
        {
            target: 'btnAddCredit',
            title: "Surprise & Delight",
            text: "To fully restore trust for a Gold Member, apply a small credit. Click the button to finish.",
            trigger: 'click',
            position: 'top'
        }
    ];

    // --- TOUR LOGIC ---

    function startTour() {
        showStep(0);
    }

    function showStep(index) {
        if(index >= tourSteps.length) return;
        currentTourStep = index;
        const step = tourSteps[index];
        const targetEl = document.getElementById(step.target);
        const bubble = document.getElementById('bubble');
        const backdrop = document.getElementById('backdrop');

        // 1. Activate Backdrop
        backdrop.classList.add('active');

        // 2. Highlight Target
        // Remove highlight from all others first
        document.querySelectorAll('.walkme-target-highlight').forEach(el => el.classList.remove('walkme-target-highlight'));
        targetEl.classList.add('walkme-target-highlight');

        // 3. Position Bubble
        const rect = targetEl.getBoundingClientRect();
        let top, left;

        // Simple positioning logic
        if(step.position === 'right') {
            top = rect.top;
            left = rect.right + 15;
        } else if (step.position === 'left') {
            top = rect.top;
            left = rect.left - 310; // Bubble width + padding
        } else if (step.position === 'top') {
            top = rect.top - 150;
            left = rect.left;
        }

        bubble.style.top = top + 'px';
        bubble.style.left = left + 'px';
        
        // 4. Update Content
        document.getElementById('bubbleTitle').innerText = step.title;
        document.getElementById('bubbleText').innerHTML = step.text;
        document.getElementById('bubbleStep').innerText = `Step ${index + 1} of ${tourSteps.length}`;

        // 5. Configure Next Button
        const btn = document.getElementById('bubbleBtn');
        if(step.trigger === 'next') {
            btn.style.display = 'block';
            btn.onclick = () => nextStep();
        } else {
            btn.style.display = 'none'; // User must interact with UI to proceed
        }

        bubble.classList.add('visible');
    }

    function nextStep() {
        currentTourStep++;
        if(currentTourStep < tourSteps.length) {
            showStep(currentTourStep);
        } else {
            // Tour Over
            document.getElementById('backdrop').classList.remove('active');
            document.getElementById('bubble').classList.remove('visible');
        }
    }

    // --- MOCK UI INTERACTION FUNCTIONS ---

    function openCaseForm() {
        if(currentTourStep === 1) {
            document.getElementById('caseFormPanel').style.display = 'block';
            nextStep(); // Advance WalkMe
        }
    }

    // Listen for Dropdown Change (Step 2)
    document.getElementById('caseReason').addEventListener('change', function() {
        if(this.value === 'damage' && currentTourStep === 2) {
            document.getElementById('empathySection').style.display = 'block';
            nextStep();
        }
    });

    // Listen for Checkbox (Step 3)
    function enableResolution() {
        if(document.getElementById('empathyCheck').checked && currentTourStep === 3) {
            document.getElementById('resolutionSection').style.opacity = '1';
            document.getElementById('resolutionSection').style.pointerEvents = 'auto';
            nextStep();
        }
    }

    // Listen for Resolution Change (Step 4)
    function checkResolution() {
        const val = document.getElementById('resolutionType').value;
        if(val === 'repair' && currentTourStep === 4) {
            document.getElementById('creditOption').style.display = 'block';
            nextStep();
        }
    }

    function finishSimulation() {
        document.getElementById('backdrop').classList.remove('active');
        document.getElementById('bubble').classList.remove('visible');
        document.getElementById('successModal').style.display = 'block';
    }

    // Initialize
    window.onload = () => {
        setTimeout(startTour, 1000); // Wait 1 sec before starting
    }

</script>

</body>
</html>
