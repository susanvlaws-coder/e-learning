        }
        
        .walkme-overlay-backdrop.active {
            opacity: 1;
            pointer-events: auto; /* Block clicks everywhere */
        }

        /* The 'Hole' in the overlay - simulated by high z-index on target */
        .walkme-target-highlight {
            position: relative;
